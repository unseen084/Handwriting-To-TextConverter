<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/menu1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sedevelopers.handwrittentotextconverter.Menu"
    tools:showIn="@layout/activity_menu">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Scanning"
        android:id="@+id/ts"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/me"
        android:layout_alignStart="@+id/me"
        android:layout_alignRight="@+id/me"
        android:layout_alignEnd="@+id/me" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Math Expression"
        android:id="@+id/me"
        android:layout_below="@+id/ts"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text To Sound"
        android:id="@+id/tts"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/me"
        android:layout_alignEnd="@+id/me"
        android:layout_alignLeft="@+id/me"
        android:layout_alignStart="@+id/me" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:id="@+id/abt"
        android:layout_below="@+id/tts"
        android:layout_marginTop="68dp"
        android:layout_alignRight="@+id/tts"
        android:layout_alignEnd="@+id/tts"
        android:layout_alignLeft="@+id/tts"
        android:layout_alignStart="@+id/tts" />
</RelativeLayout>
